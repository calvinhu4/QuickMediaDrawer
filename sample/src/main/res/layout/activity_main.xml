<hu.calvin.quickmediadrawer.QuickAttachmentDrawer
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quick_media_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="?attr/actionBarSize"
        android:background="#16efd7">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <hu.calvin.quickmediadrawer.ResizeableImageView
                android:id="@+id/sample_imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#dddddd"/>
        </ScrollView>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">
            <Button
                android:id="@+id/quick_media_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand"/>
            <Button
                android:id="@+id/quick_media_full_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Expand"/>
            <Button
                android:id="@+id/quick_media_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collapse"/>
        </LinearLayout>
    </LinearLayout>
</hu.calvin.quickmediadrawer.QuickAttachmentDrawer>
